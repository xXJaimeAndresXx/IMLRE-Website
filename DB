create database imlre;
use imlre;
### Tablas 
create table Usuarios(idUsuario int auto_increment primary key, Usuario varchar(40), correo varchar(40), pass varchar(10));
create table comentarios(idcoment int auto_increment primary key, idUsuario int ,comentario varchar(150), Hora_fecha datetime, foreign key (idUsuario) references Usuarios(idUsuario) on delete no action on update no action);
create table Resenias(idResenia int auto_increment primary key, resenia varchar(300), Hora_fecha datetime, NoComen int );
create table Albums(idAlbum int auto_increment primary key, idResenia int, Descripcion varchar(200), Titulo varchar(50),Genero varchar(20), Anio char(5), Link varchar(60), foreign key (idResenia) references Resenias(idResenia) on delete cascade on update cascade );

### vamos ademas de guardar los datos aqui crearlos tambien en la base de datos y darles permisos solo de consulta para que no siempre se este utilizando la conexion Root
o asi y esta mas facil, ya vemos 


