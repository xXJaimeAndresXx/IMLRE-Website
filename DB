create database imlre;
use imlre;
### Tablas 
create table Albums(idAlbum int auto_increment primary key, Descripcion varchar(1000), Titulo varchar(100),Genero varchar(40), Anio char(5), Link varchar(1000));
create table Resenias(idResenia int auto_increment primary key,idAlbum int,resenia varchar(1000), Hora_fecha datetime, NoComen int , foreign key (idAlbum) references Albums (idAlbum) on delete cascade on update cascade);
create table comentarios(idcoment int auto_increment primary key, idResenia int, comentario varchar(150), Hora_fecha datetime, foreign key (idResenia) references Resenias(idResenia) on delete no action on update no action);

